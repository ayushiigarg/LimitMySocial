{
  "manifest_version": 3,
  "name": "LimitMySocial",
  "version": "1.0",
  "description": "Limit time spent on distracting websites and block specific YouTube channels.",
  "permissions": ["storage", "tabs", "webNavigation"],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://*.facebook.com/*",
    "https://*.twitter.com/*",
    "https://*.instagram.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}




